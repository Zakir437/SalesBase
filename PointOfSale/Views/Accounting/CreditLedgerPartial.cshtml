<div class="editor-label"><label for="fromDatePickerForCreditLedger">From</label></div>
<div class="editor-field">
    @(Html.Kendo().DateTimePicker()
    .Name("fromDatePickerForCreditLedger")
    .Value(DateTime.Now)
    .Max(DateTime.Now)
    .Format("MMM dd yyyy hh:mm tt")
    .HtmlAttributes(new { @style = "width:248px" })
    )
</div>
<div class="editor-label"><label for="toDatePickerForCreditLedger">To</label></div>
<div class="editor-field">
    @(Html.Kendo().DateTimePicker()
    .Name("toDatePickerForCreditLedger")
    .Max(DateTime.Now)
    .Value(DateTime.Now)
    .Format("MMM dd yyyy hh:mm tt")
    .HtmlAttributes(new { @style = "width:248px;" })
    )
</div>
