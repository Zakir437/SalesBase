@*@model PointOfSale.Models.ViewAccountName

@{
    PointOfSale.Models.PointOfSale_DBEntities db = new PointOfSale.Models.PointOfSale_DBEntities();
    var allUser = db.ViewAccNameAssignWithUsers.Where(a => a.AccId == Model.AccId).ToList();
}
<style>
    .dl-horizontal {
        width: 100%;
    }
    .dl-horizontal dt {
        float: left;
        width: 250px;
        overflow: hidden;
        clear: left;
        text-align: right;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin-top: 8px;
    }
    .dl-horizontal dd {
        margin-left: 260px;
        margin-top: 8px;
    }
</style>
<dl class="dl-horizontal">
    <dt>Account Name </dt>
    <dd>
        <span>@Model.Name</span>
        <span class="btn btn-primary" id="btn_Acc_Edit" data-toggle="tooltip" data-original-title="Edit Account Name"><i class="fa fa-pencil"></i></span>
    </dd>
    <dt>Account Cash Flow Type </dt>
    <dd>
        @if (Model.CashType == 1)
        {
            <span>Debit</span>
        }
        else if (Model.CashType == 2)
        {
            <span>Credit</span>
        }
        else
        {
            <span>Debit & Credit</span>
        }
    </dd>
    @if (Model.CashType == 1 || Model.CashType == 3)
     {
        <dt>Account Type</dt>
        <dd>
           @Model.AccTypeName
        </dd>
        <dt>Working Balance</dt>
        <dd>Tk. @Model.Balance</dd>

        <dt>Total Credit Limit</dt>
        <dd>Tk. @Model.TotalCreditLimit</dd>

        <dt>Transaction Highest Amount(Per Month)</dt>
        <dd>Tk. @Model.TransactionHigestAmount</dd>

        <dt>No.of Transaction(Per Month)</dt>
        <dd>@Model.NoOfTranPerMonth</dd>
    }
    else
    {
        <dt>Current Balance</dt>
        <dd>Tk. @Model.Balance</dd>
    }

    @************************* All Assigned User List ********************************@
    @*<dt>All User Who Can Access</dt>
    <dd>
        @{
            foreach (var usr in allUser)
            {
                <div>
                    @usr.UserName
                </div>
            }
        }
    </dd>
    @if (Model.Description != null)
     {
        <dt>Description</dt>
        <dd>@Model.Description</dd>
     }
</dl>*@

<script>
    $('[data-toggle="tooltip"]').tooltip();
</script>