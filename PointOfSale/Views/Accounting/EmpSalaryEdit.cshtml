<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin-bottom:4%;margin-top:2%;">
    <div id="divEmpSalaryForm"></div>
    <div class="k-edit-buttons k-state-default" style="margin-left:30px;">
        <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnEmpSalaryUpdate"><span class="k-icon k-update"></span>Update</button>
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnEmpSalaryRefresh"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnEmpSalaryCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>
<script>
     $(document).ready(function ()
     {
         $("#divEmpSalaryForm").empty();
         $("#divEmpSalaryForm").append('<div class="tiny_loading"></div>');
         $("#divEmpSalaryForm").load('@Url.Action("_EmpSalaryEdit", "Accounting")?transId=' + '@ViewBag.TransId' + '&xmlFileId=' + '@ViewBag.xmlFileId');
    });

    $("#btnEmpSalaryRefresh").click(function () {
         $("#divEmpSalaryForm").empty();
         $("#divEmpSalaryForm").append('<div class="tiny_loading"></div>');
         $("#divEmpSalaryForm").load('@Url.Action("_EmpSalaryEdit", "Accounting")?transId=' + '@ViewBag.TransId' + '&xmlFileId=' + '@ViewBag.xmlFileId');
    });

    $("#btnEmpSalaryCancel").click(function ()
    {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });

    var validation = $("#divEmpSalaryForm").kendoValidator().data("kendoValidator");
    $("#btnEmpSalaryUpdate").click(function () {
        if (validation.validate())
        {
            var sendData = {
                Id: $("#Id").val(),
                TotalAmount: $("#TotalAmount").val(),
                TotalPresent: $("#TotalPresent").val(),
                TotalPaidLeave: $("#TotalPaidLeave").val(),
                TotalWorkingDays: $("#TotalWorkingDays").val(),
                TotalHoliday: $("#TotalHoliday").val(),
                UpdatedBy: userId,
                xmlFileId: '@ViewBag.xmlFileId'
            }
            $.ajax({
                url: '@Url.Action("EmpSalaryUpdate", "Accounting")',
                type: 'POST',
                data: sendData,
                success: function (data)
                {
                    $("#divEmpSalaryEditWin").data("kendoWindow").close();
                    if (data == "success")
                    {
                        $("#divEmpSalaryList").empty();
                        $("#divEmpSalaryList").append('<div class="loading_partial"></div>');
                        $("#divEmpSalaryList").load('@Url.Action("XmlFileInfoDetailsList", "Accounting")?xmlFileId=' + '@ViewBag.xmlFileId');
                    }
                    else {
                        alert("Update error...");
                    }
                }
            });
        }
    });




</script>
