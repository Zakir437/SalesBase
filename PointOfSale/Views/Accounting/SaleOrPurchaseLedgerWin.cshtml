<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin-bottom:4%;margin-top:2%;">
    <div id="divSaleOrPurchaseForm"></div>
    <div class="k-edit-buttons k-state-default" style="margin-left:30px;">
        <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnSaleOrPurchaseLedgerSubmit"><span class="k-icon k-update"></span>Submit</button>
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnLedgerRefresh"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnSaleOrPurchaseLedgerCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>

<script>
     $(document).ready(function () {
         $("#divSaleOrPurchaseForm").empty();
         $("#divSaleOrPurchaseForm").load('@Url.Action("SaleOrPurchaseLedgerWinPartial", "Accounting")');
    });
    $("#btnLedgerRefresh").click(function () {
        $("#divSaleOrPurchaseForm").empty();
        $("#divSaleOrPurchaseForm").load('@Url.Action("SaleOrPurchaseLedgerWinPartial", "Accounting")');
    });
    $("#btnSaleOrPurchaseLedgerCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });
    $("#btnSaleOrPurchaseLedgerSubmit").click(function () {
        var fromDatePicker = $("#fromDatePickerForLedger").data("kendoDateTimePicker");
        var toDatePicker = $("#toDatePickerForLedger").data("kendoDateTimePicker");
        $("#divSaleOrPurchaseWin").data("kendoWindow").close();

        var data = "fromDate=" + fromDatePicker.value().toISOString() + "?toDate=" + toDatePicker.value().toISOString();
        window.open('@Url.Action("SalesAndPurchaseLedger", "Accounting")?q=' + getDataEncrypted(data), '_blank');

        @*$("#reportList").empty();
        $("#reportList").append('<div class="loading_partial"></div>');
        $("#reportList").load('@Url.Action("SaleOrPurchaseList", "PointOfSale")?FromDate=' + fromDatePicker.value().toISOString() + '&ToDate=' + toDatePicker.value().toISOString());*@
    });
</script>
