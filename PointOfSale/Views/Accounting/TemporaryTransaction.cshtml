    // methodId = 2 for salary account
    int transCount = 0;
    if (db.PaymentTransactions.Any(a => a.MethodId == 2 && a.Type == 6 && a.Status == false))
    {
        transCount = db.PaymentTransactions.Where(a => a.MethodId == 2 && a.Type == 6 && a.Status == false).Count();
    }
}
