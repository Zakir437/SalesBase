@model PointOfSale.ModelViews.Configuration.CreditLimitModelView
@Html.HiddenFor(a => a.Id)
<div class="editor-label"><label for="Name">Name</label></div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name, new { htmlattributes = new { @class = "k-textbox", @style = "width:100%; max-width:100%" } })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-Danger" })
</div>
<div class="editor-label"><label for="Limit">Limit</label></div>
<div class="editor-field">
    @Html.EditorFor(model => model.Limit, new { htmlattributes = new { @min = 1, @type="number", @class = "k-textbox", @style = "width:100%; max-width:100%" } })
    @Html.ValidationMessageFor(model => model.Limit, "", new { @class = "text-Danger" })
</div>

