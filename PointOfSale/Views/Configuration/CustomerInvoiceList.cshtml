@model IEnumerable<PointOfSale.Models.PosOrder>
@using System.Globalization;
@{
    var count = 0;
}
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-responsive table-condensed table-striped">
        <tr>
            <th>SL.</th>
            <th>Voucher Name</th>
            <th>Total Price</th>
            <th>Order Date</th>
        </tr>
        @foreach (var list in Model)
        {
            count++;
            <tr>
                <td>@count . </td>
                <td>@list.OrderNumber</td>
                <td>@list.TotalPrice.ToString("C", new CultureInfo("bn-BD"))</td>
                <td>@Convert.ToDateTime(list.OrderDate).ToString("MMM dd yyyy")</td>
            </tr>
        }
    </table>
}
else
{
    <h4>There is no record to display</h4>
}
<script>
    $('[data-toggle="tooltip"]').tooltip();
</script>


