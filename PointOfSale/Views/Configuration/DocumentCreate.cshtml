<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin-bottom:4%;margin-top:2%;">
    <div id="divDocumentForm"></div>
    <div class="k-edit-buttons k-state-default" style="margin-left:30px;">
        @if (ViewBag.DocumentId > 0)
        {
            <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnDocumentCreate"><span class="k-icon k-update"></span>Update</button>
        }
        else
        {
            <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnDocumentCreate"><span class="k-icon k-update"></span>Create</button>
        }
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnRefresh"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#divDocumentForm").empty();
        $("#divDocumentForm").load('@Url.Action("DocumentCreatePartial", "Configuration")?id=' + '@ViewBag.DocumentId');
    });
    $("#btnRefresh").click(function () {
        $("#divDocumentForm").empty();
        $("#divDocumentForm").load('@Url.Action("DocumentCreatePartial", "Configuration")?id=' + '@ViewBag.DocumentId');
    });
    $("#btnCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });
</script>