<section class="content">
    <div class="panel panel-info">
        <div class="panel-heading" style="padding-bottom:46px;">
            <div class="pull-left">
                <h4>Payment Type</h4>
            </div>
            @*<div class="pull-right">
                    <a class="btn btn-default" href="/Accounting/PaySalary"><i class="fa fa-arrow-left"></i> Back</a>
                </div>*@
        </div>
        <div class="panel-body">
            <button class="btn btn-default" id="btnMethodCreateWin" style="margin:15px 0 5px 0" data-toggle="tooltip" title="Add payment method"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</button>

            <div class="row">
                <div class="col-md-12">
                    <div id="divMethodList"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="divMethodWin"></div>
<div id="divInDefaultSetWin"></div>
<div id="divOutDefaultSetWin"></div>
<script id="temp_win_delete_entry" type="text/x-kendo-template">
    <div style="padding:1em;">
        <p style="font-size: 14px; padding: 10px"> #=msg# </p>
        <div style="text-align: right;">
            <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btn_delete_Entry_noty_ok"><span class="k-icon k-update"></span>OK</button>
            <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btn_delete_Entry_noty_cancel"><span class="k-icon k-cancel"></span>Cancel</button>
        </div>
    </div>
</script>
<script>
    var id = 0; type = 0;
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
         $("#divMethodList").empty();
         $("#divMethodList").append('<div class="loading_partial"></div>');
         $("#divMethodList").load('@Url.Action("PaymentMethodList","Configuration")');


         $("#liForAccount").addClass('active');
         $("#liForAccountConfig").addClass('active');
         $("#liForPaymentMethod").addClass('active');

    });

    $("#btnMethodCreateWin").click(function () {
        $("#divMethodWin").empty();
        $("#divMethodWin").kendoWindow({
        actions: ["Close"],
        draggable: false,
        modal: true,
        visible: false,
        width: 638,
        height: 238,
        title: 'Payment Method',
        //resizable: false
        });
        var methodWin = $("#divMethodWin").data("kendoWindow");
        methodWin.refresh('@Url.Action("PaymentMethodCreate", "Configuration")');
        methodWin.center().open();
    });

    $("#divMethodList").on('click', ".btnPaymentMethodEdit", function () {
        id = $(this).data("id");
        $("#divMethodWin").empty();
        $("#divMethodWin").kendoWindow({
            actions: ["Close"],
            draggable: false,
            modal: true,
            visible: false,
            width: 638,
            height: 238,
            title: 'Payment Method',
            //resizable: false
        });
        var methodWin = $("#divMethodWin").data("kendoWindow");
        methodWin.refresh('@Url.Action("PaymentMethodCreate", "Configuration")?id=' + id);
        methodWin.center().open();
    });

    $("#divMethodList").on('click', ".btnMethodDelete", function () {
        id = $(this).data("id");
        var kendoWindow = $("<div />").kendoWindow({
            actions: ["Close"],
            title: "Alert",
            resizable: false,
            width: "30%",
            modal: true
        });

        msg = "Are you sure want to delete this method?";
        var template = kendo.template($("#temp_win_delete_entry").html());
        kendoWindow.data("kendoWindow").content(template).center().open();

        kendoWindow.find("#btn_delete_Entry_noty_cancel").click(function () {
            kendoWindow.data("kendoWindow").close();
            document.documentElement.style.overflow = "auto";
        }).end();
        kendoWindow.find("#btn_delete_Entry_noty_ok").click(function () {
            kendoWindow.data("kendoWindow").close();
            document.documentElement.style.overflow = "auto";
            deleteMethod(id);
        }).end();
        document.documentElement.style.overflow = "hidden";
    });

    function deleteMethod(id) {
        $.ajax({
            url: '@Url.Action("DeletePaymentMethod", "Configuration")',
            type: 'Post',
            data: { id: id },
            success: function (data) {
                if (data == "success") {
                     $("#divMethodList").empty();
                     $("#divMethodList").append('<div class="loading_partial"></div>');
                     $("#divMethodList").load('@Url.Action("PaymentMethodList","Configuration")');
                } else {
                    alert("Delete Error...");
                }
            }
        });
    }

    $("#divMethodList").on("click", ".inactivatePaymentMethod,.activatePaymentMethod", function () {
        id = $(this).data("id");
        var status = $(this).data("isactive");
        var sendData = {
            id: id,
            status: status
        };
        $.ajax({
            url: '@Url.Action("ChangePaymentMethodStatus", "Configuration")',
            method: 'POST',
            data: sendData,
            success: function (res) {
                if (res == "success") {
                     $("#divMethodList").empty();
                     $("#divMethodList").append('<div class="loading_partial"></div>');
                     $("#divMethodList").load('@Url.Action("PaymentMethodList","Configuration")');
                }
                else {
                    alert("Error Status Update");
                }
            }
        });
    });
    //In default account set
    $("#divMethodList").on('click', ".btnIn", function () {
        id = $(this).data("id");
        type = 1;
        $("#divInDefaultSetWin").empty();
        $("#divInDefaultSetWin").kendoWindow({
            actions: ["Close"],
            draggable: false,
            modal: true,
            visible: false,
            width: 638,
            height: 399,
            title: 'Default Account',
            resizable: false
        });
        var inDefaultWin = $("#divInDefaultSetWin").data("kendoWindow");
        inDefaultWin.refresh('@Url.Action("SetInDefault", "Configuration")?id=' + id + '&type=' + type);
        inDefaultWin.center().open();
    });
      //In default account set
    $("#divMethodList").on('click', ".btnOut", function () {
        id = $(this).data("id");
        type = 2;
        $("#divInDefaultSetWin").empty();
        $("#divInDefaultSetWin").kendoWindow({
            actions: ["Close"],
            draggable: false,
            modal: true,
            visible: false,
            width: 638,
            height: 399,
            title: 'Default Account',
            resizable: false
        });
        var OutDefaultWin = $("#divInDefaultSetWin").data("kendoWindow");
        OutDefaultWin.refresh('@Url.Action("SetInDefault", "Configuration")?id=' + id + '&type=' + type);
        OutDefaultWin.center().open();
    });

</script>


