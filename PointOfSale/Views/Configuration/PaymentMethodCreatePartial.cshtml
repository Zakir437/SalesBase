@model PointOfSale.ModelViews.PaymentMethodModelView
@Html.HiddenFor(m => m.Id)
<div class="editor-label"><label for="CustomerName">Name</label></div>
<div class="editor-field">
    @Html.EditorFor(model => model.MethodName, new { htmlattributes = new { @class = "k-textbox form-control" } })
    @Html.ValidationMessageFor(model => model.MethodName, "", new { @class = "text-Danger" })
</div>
<div class="editor-label"><label for="Type">Type</label></div>
<div class="editor-field">
    @(Html.Kendo().DropDownListFor(a => a.Type)
          .OptionLabel("--Select One Type--")
          .DataTextField("Text")
          .DataValueField("Value")
          .HtmlAttributes(new { style = "width:82%" })
          .BindTo(new List<SelectListItem>() {
              new SelectListItem() {
                  Text = "Can delete",
                  Value = "1"
              },
              new SelectListItem() {
                  Text = "Can not delete",
                  Value = "2"
              }
          })
    )
    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-Danger" })
</div>




