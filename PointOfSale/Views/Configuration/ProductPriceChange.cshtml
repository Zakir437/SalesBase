<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin-bottom:4%;margin-top:2%;">
    <div id="divProductPriceForm"></div>
    <div class="k-edit-buttons k-state-default" style="margin-left:30px;">
        <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnPriceUpdate"><span class="k-icon k-update"></span>Update</button>
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnPriceFormRefresh"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnPriceFormCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#divProductPriceForm").empty();
        $("#divProductPriceForm").load('@Url.Action("ProductPriceChangePartial", "Configuration")?productId=' + '@ViewBag.ProductId' + '&distributeId=' + '@ViewBag.DistributeId');
    });
    $("#btnPriceFormRefresh").click(function () {
        $("#divProductPriceForm").empty();
        $("#divProductPriceForm").load('@Url.Action("ProductPriceChangePartial", "Configuration")?productId=' + '@ViewBag.ProductId' + '&distributeId=' + '@ViewBag.DistributeId');
    });

    $("#btnPriceFormCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });

    var priceValidation = $("#divProductPriceForm").kendoValidator().data("kendoValidator");

    $("#btnPriceUpdate").click(function () {
        if (priceValidation.validate())
        {
            $.ajax({
                url: '@Url.Action("PriceUpdate","Configuration")',
                type: "POST",
                data: { productId: '@ViewBag.ProductId', distributeId: '@ViewBag.DistributeId', Price: $("#Price").val() },
                success: function (data)
                {
                    if (data == "success")
                    {
                        $("#divPriceChangeWin").data("kendoWindow").close();
                        $("#divStockList").empty();
                        $("#divStockList").append('<div class="loading_partial"></div>');
                        $("#divStockList").load('@Url.Action("StockListPartial","Stock")');
                    }
                    else {
                        alert("Update error...");
                    }
                }
            });
        }
    });
</script>
