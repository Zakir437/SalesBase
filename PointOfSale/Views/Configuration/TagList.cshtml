@model IEnumerable<PointOfSale.Models.ViewTag>
@using PointOfSale.Helpers
@{
    var count = 0;
}
@if (Model.Any() == true)
{
     <table class="table table-bordered table-hover table-responsive table-condensed table-striped">
            <tr>
                <th>SL.</th>
                <th>Name</th>
                <th>CreatedBy</th>
                <th>Created Date</th>
                <th>UpdatedBy</th>
                <th>Updated Date</th>
                <th></th>
            </tr>
            @foreach (var list in Model)
            {
                count++;
                <tr>
                    <td>@count. </td>
                    <td>
                        <a href="@Html.EncodedParam("TagItem","Configuration", new { id = list.Id }, null)" data-toggle="tooltip" title="View Tag details">@list.TagName</a>
                    </td>
                    <td>@list.CreatedBy</td>
                    <td>@Convert.ToDateTime(list.CreatedDate).ToString("MMM dd,yyyy")</td>
                    <td>@list.UpdatedBy</td>
                    <td>
                        @if (list.UpdatedDate != null)
                        {
                            @Convert.ToDateTime(list.UpdatedDate).ToString("MMM dd,yyyy")
                        }
                        else
                        {
                            <span>Not yet updated</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-primary btnTagEdit" data-id="@list.Id" data-toggle="tooltip" title="Edit Tag Information"><i class="fa fa-pencil-square-o"></i></button>
                        @if (list.Status == true)
                         {
                            <button type="button" data-id="@list.Id" data-isactive="0" class="btn btn-danger inactivateTag" data-toggle="tooltip" title="Inactivate Tag">
                                <i class="fa fa-stop" aria-hidden="true"></i>
                            </button>
                         }
                        else
                        {
                            <button type="button" data-id="@list.Id" data-isactive="1" class="btn btn-success activateTag" data-toggle="tooltip" title="Activate Tag">
                                <i class="fa fa-play" aria-hidden="true"></i>
                            </button>
                        }
                        @if (@list.Status == false)
                        {
                            <span data-id="@list.Id" style="cursor:pointer;" data-toggle="tooltip" title="Delete Tag" class="btn btn-danger btnTagDelete">
                                <i class="fa fa-trash"></i>
                            </span>
                         }
                    </td>
                </tr>
             }
        </table>
}
else
{
    <h4>There is no record to display</h4>
}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
</script>





