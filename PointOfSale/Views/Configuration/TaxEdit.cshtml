<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin-bottom:4%;margin-top:2%;">
    <div id="divTaxForm"></div>
    <div class="k-edit-buttons k-state-default" style="margin-left:30px;">
        <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnTaxUpdate"><span class="k-icon k-update"></span>Update</button>
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnRefresh"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>

<script>
    $(document).ready(function () {
         $("#divTaxForm").empty();
         $("#divTaxForm").load('@Url.Action("TaxEditPartial", "Configuration")?miscId=' + '@ViewBag.MiscId');
    });
    $("#btnRefresh").click(function () {
        $("#divTaxForm").empty();
        $("#divTaxForm").load('@Url.Action("TaxEditPartial", "Configuration")?miscId=' + '@ViewBag.MiscId');
    });
    $("#btnCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });

    var validation = $("#divTaxForm").kendoValidator().data("kendoValidator");

    $("#btnTaxUpdate").click(function () {
        if (validation.validate())
        {
            var sendData = {
                MiscId: $("#MiscId").val(),
                Rate: $("#Rate").val()
            }
            $.ajax({
                url: '@Url.Action("TaxUpdate","Configuration")',
                type: 'POST',
                data: sendData,
                success: function (data)
                {
                    if (data == "success")
                    {
                        $("#divTaxWin").data("kendoWindow").close();
                        $("#divMiscFuncList").empty();
                        $("#divMiscFuncList").append('<div class="loading_partial"></div>');
                        $("#divMiscFuncList").load('@Url.Action("MiscFuncList","Configuration")');
                    }
                    else {
                        alert("Update error...");
                    }
                }
            })
        }
    });


</script>
