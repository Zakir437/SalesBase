<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin-bottom:4%;margin-top:2%;">
    <div id="divWOItemForm"></div>
    <div class="k-edit-buttons k-state-default" style="margin-left:30px;">
        @if (ViewBag.ItemId > 0)
        {
            <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnAddItem"><span class="k-icon k-update"></span>Update</button>
        }
        else
        {
            <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnAddItem"><span class="k-icon k-update"></span>Create</button>
        }
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnRefresh"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>
<script>
    var indentId = 0;
    $(document).ready(function () {
        $("#divWOItemForm").append('<div class="tiny_loading"></div>');
        $("#divWOItemForm").load('@Url.Action("AddWorkOrderItemPartial", "Inventory")?itemId=' + '@ViewBag.ItemId' + '&workId=' + '@ViewBag.WorkId' + '&isQuantityEdit=' + '@ViewBag.IsQuantityEdit');
    });
    $("#btnRefresh").click(function () {
        $("#divWOItemForm").empty();
        $("#divWOItemForm").append('<div class="tiny_loading"></div>');
        $("#divWOItemForm").load('@Url.Action("AddWorkOrderItemPartial", "Inventory")?itemId=' + '@ViewBag.ItemId' + '&workId=' + '@ViewBag.WorkId' + '&isQuantityEdit=' + '@ViewBag.IsQuantityEdit');
    });

    $("#btnCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });

    var validation = $("#divWOItemForm").kendoValidator({
        rules: {
            Quantity: function (input) {
                if (input.is("[name=Quantity]") && $.trim(input.val()) == "") {
                    return false;
                }
                return true;
            },
            equalQauntity: function (input) {
                if (input.is("[name=Quantity]") && $.trim(input.val()) == input.data("qty")) {
                    return false;
                }
                return true;
            },
            lessQuantity: function (input) {
                if (input.is("[name=Quantity]") && $.trim(input.val()) < 1) {
                    return false;
                }
                return true;
            }
        },
        messages:
        {
            Quantity: "Please enter quantity",
            equalQauntity: "Quantity can not be equal to current quantity",
            lessQuantity: "Quantity should be greater than or equal to 1"
        }
    }).data("kendoValidator");

    $("#btnAddItem").click(function () {
        if (validation.validate())
        {
            var sendData = {
                Id: '@ViewBag.ItemId',
                WorkOrderId: '@ViewBag.WorkId',
                IndentId: $("#IndentDropdownList").val(),
                RequestQty: $("#RequestQty").val(),
                PerItemPrice: $.trim($("#PerItemPrice").val()),
                Price: $.trim($("#Price").val()),
                RowId: $("#ProductDropdown").val(),
                changeQuantity: $("#Quantity").val(),
                CreatedBy : userId
            }
            $.ajax({
                url: '/Inventory/WorkOrderItemUpdate',
                type: "POST",
                data: sendData,
                success: function (result) {
                    $("#btnAddItem").closest(".k-window-content").data("kendoWindow").close();
                    if (result == "success")
                    {
                        window.location.reload();
                    }
                    else
                    {
                        alert("Save Error");
                    }
                }
            });
        }
    });

    //*************************Product dropdown******************************
    function onChangeProduct()
    {
        $("#divItemInfo").hide();
        $("#RequestQty").val("");
        $("#PerItemPrice").val(0);
        $("#Price").val(0);
    }

    //*************************Indent dropdown******************************
    function filterCategory() {
        return {
            wOrderId : '@ViewBag.WorkId',
            proRowId: $("#ProductDropdown").val()
        };
    }

    function onChangeIndent()
    {
        $("#divItemInfo").hide();
        indentId = this.value();
        if (indentId > 0)
        {
            $.ajax({
                url: '/Inventory/IndentItemRemainingCheck',
                type: "POST",
                data: { indentId: indentId, proRowId: $("#ProductDropdown").val()  },
                success: function (result)
                {
                    if (result == 0)
                    {
                        $("#divItemInfo").hide();
                        $("#RequestQty").val("");
                        $("#qtyRemMsg").append("This indent product not more quantity to add");
                    }
                    else
                    {
                        $("#divItemInfo").show();
                        $("#RequestQty").prop('max', result);
                        $("#RequestQty").attr("placeholder", "Max " + result);
                    }
                }
            });
        }
        else
        {
            $("#divItemInfo").hide();
        }
    }
</script>





