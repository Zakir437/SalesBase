                    </td>
                </tr>
            </table>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $("#liForReporting").addClass('active');
        $("#liForTaskScheduler").addClass('active');
        $('[data-toggle="tooltip"]').tooltip();
    });
    //Inventory Daily data set generate
    $("#btnInvDataGenerate").click(function () {
        $(this).prop('disabled', true);
        $.ajax({
            url: '/Inventory/InvDataSetGenerate',
            type: 'POST',
            success: function (data)
            {
                if (data == "error")
                {
                    alert("Generate error");
                }
                $("#btnInvDataGenerate").prop('disabled', false);
            }
        });
    });

    //Stock Daily Sold generate
    $("#btnStockDailySold").click(function () {
