                $("#returnRow").css("display", "");
                $("#returnAmount").empty();
                $("#returnAmount").append(returnAmount.toFixed(2));

                $("#remainingAmount").empty();
                $("#remainingAmount").append('0.00');

                $("#btnPay").prop("disabled", false);
            }
            else {
                if (remainingAmount == 0) {
