        });
        var checkWin = $("#divCheckWin").data("kendoWindow");
        checkWin.refresh('@Url.Action("Check", "PointOfSale")?totalPrice=' + totalPrice + '&methodId=' + methodId + '&defaultType=' + defaultType);
        checkWin.center().open();
    });
    $("#divCheckWin").on('click', '#btnCheckPaid', function () {
        if (checkValidator.validate()) {
            checkAmount = parseFloat($("#CheckAmount").val()).toFixed(2);
            checkBodyId = $("#CheckBodyId").val();
            checkTransactionNo = $("#CheckTransactionNo").val();
            $("#tblPaymentType tr:last").prev().prev().before('<tr>' +
