    @**************************Payment type cancel*****************************************@
    $("#tblPaymentType").on('click', '.btnPaymentTypeCancel', function () {
        if ($(this).data("id") == 1)
        {
            cashAmount = 0;
        }
        if ($(this).data("id") == 5)
        {
            debitAmount = 0;
        }
        if ($(this).data("id") == 6)
        {
            creditAmount = 0;
        }
