<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" id="" style="margin:2%;">
    <div id="divDiscItemForm"></div>
    <div class="k-edit-buttons k-state-default">
        <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnDiscItemUpdate"><span class="k-icon k-update"></span>Update</button>
        <button type="reset" class="k-button k-button-icontext k-grid-update" id="btnDiscItemEditRef"><span class="k-icon k-i-refresh"></span>Refresh</button>
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnDiscEditCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>
<script>
    var start;
    var end;
    var discOff = 0, amountOff = 0, discPrice = 0, productPrice = 0;
    $(document).ready(function () {
        $("#divDiscItemForm").append('<div class="tiny_loading"></div>');
        $("#divDiscItemForm").load('/Offer/DiscItemEditPartial?id=' + '@ViewBag.Id');
    });
    $("#btnDiscItemEditRef").click(function () {
        $("#divDiscItemForm").empty();
        $("#divDiscItemForm").append('<div class="tiny_loading"></div>');
        $("#divDiscItemForm").load('/Offer/DiscItemEditPartial?id=' + '@ViewBag.Id');
    });

    $("#btnDiscEditCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });

    var validation = $("#divDiscItemForm").kendoValidator({
        rules: {
            dateTimepicker: function (input) {
                if (input.is("[data-role=datetimepicker]")) {
                    return input.data("kendoDateTimePicker").value();
                } else {
                    return true;
                }
            }
        },
        messages: {
            dateTimepicker: "Please enter valid date!"
        }
    }).data("kendoValidator");

    $("#btnDiscItemUpdate").click(function () {

        if (validation.validate())
        {
            $(this).prop('disabled', true);

            var discItem = {
                Id: '@ViewBag.Id',
                IsFree: $("#chkFree").is(":checked"),
                PercentageOff: parseFloat($("#percentOff").val()),
                AmountOff: parseFloat($("#amountOff").val()),
                OfferPrice: parseFloat($("#discPrice").text())
            }
            var offer;
            offer = {
                StartDate: $("#StartDate").val(),
                EndDate: $("#EndDate").val(),
                ValidityDays: $("#ValidityDays").val(),
                ValidityTime: $("#ValidityTime").val(),
                IsDateValidity: $("#checkDate").is(":checked"),
                IsEditable: $("#IsEditable").is(":checked"),
                ScheduleId: $("#ScheduleId").val(),
                DiscItem: discItem,
                CreatedBy: userId
            }

            $.ajax({
                url: '/Offer/DiscountItemUpdate',
                type: "POST",
                data: offer,
                success: function (result) {
                    $("#divDiscItemEditWin").data("kendoWindow").close();
                    if (result == "success") {
                        multiSelectIds == "";
                        loadProductList();
                    }
                    else {
                        alert("Save Error");
                    }
                }
            });
        }
    });

    //***************************Date validation ******************************
    function onStartChange() {
        var startDate = start.value(),
            endDate = end.value();

        if (startDate) {
            startDate = new Date(startDate);
            startDate.setDate(startDate.getDate());
            end.min(startDate);
        } else if (endDate) {
            start.max(new Date(endDate));
        } else {
            endDate = new Date();
            start.max(endDate);
            end.min(endDate);
        }
    }

    function onEndChange() {
        var endDate = end.value(),
            startDate = start.value();

        if (endDate) {
            endDate = new Date(endDate);
            endDate.setDate(endDate.getDate());
            start.max(endDate);
        } else if (startDate) {
            end.min(new Date(startDate));
        } else {
            endDate = new Date();
            start.max(endDate);
            end.min(endDate);
        }
    }

    //calculate discount offer
    function calculateDiscount(type) {
        if ($("#percentOff").val() > 0) {
            discOff = parseFloat($("#percentOff").val());
        }
        else {
            discOff = 0;
        }
        if (discOff > 100) {
            discOff = 100;
        }
        if ($("#amountOff").val() > 0) {
            amountOff = parseFloat($("#amountOff").val());
        }
        else {
            amountOff = 0;
        }
        productPrice = parseFloat($("#productPrice").text());
        if (type == 1 || type == 3) // calculate if quantity change or percentage off change
        {
            amountOff = productPrice * (discOff / 100);
            discPrice = productPrice - amountOff;
            $("#discPrice").empty();
            $("#discPrice").append(discPrice.toFixed(2));
            $("#amountOff").val(amountOff.toFixed(2));

            if (discOff == 100) {
                $("#chkFree").prop('checked', true);
            }
            else {
                $("#chkFree").prop('checked', false);
            }
        }
        else if (type == 2) // calculate if check free change
        {
            if ($("#chkFree").is(':checked')) {
                $("#discPrice").empty();
                $("#discPrice").append(0.00);
                $("#amountOff").val(productPrice.toFixed(2));
                $("#percentOff").val(100);
            }
            else {
                $("#discPrice").empty();
                $("#discPrice").append(productPrice.toFixed(2));
                $("#amountOff").val(0);
                $("#percentOff").val(0);
            }
        }
        else if (type == 4) // calculate if amount off change
        {
            discOff = (amountOff / productPrice) * 100;
            discPrice = productPrice - amountOff;
            $("#discPrice").empty();
            $("#discPrice").append(discPrice.toFixed(2));
            $("#percentOff").val(discOff.toFixed(2));
            if (discOff == 100) {
                $("#chkFree").prop('checked', true);
            }
            else {
                $("#chkFree").prop('checked', false);
            }
        }
    }

    //number input handler
    function changeHandler(val) {
        if (Number(val.value) > 100) {
            val.value = 100;
        }
        else if (Number(val.value) <= 0) {
            val.value = 0;
        }
    }

</script>




