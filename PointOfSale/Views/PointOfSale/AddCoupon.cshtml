@{
    ViewBag.Title = "AddCoupon";
    Layout = "~/Views/Shared/_LayoutForTemplate.cshtml";
}
<section class="content">
    <div class="panel panel-info">
        <div class="panel-heading" style="padding-bottom:46px;">
            <div class="pull-left">
                @if (ViewBag.Type == 1)
                 {
                    <h4 class="uppercase">Cash Coupon</h4>
                 }
                else if(ViewBag.Type == 2)
                {
                    <h4 class="uppercase">Percentile Coupon</h4>
                }
                else if (ViewBag.Type == 3)
                {
                    <h4 class="uppercase">Delivery Charge Coupon</h4>
                }
                else if (ViewBag.Type == 4)
                {
                    <h4 class="uppercase">Invoice Range Coupon</h4>
                }
            </div>
            <div class="pull-right">
                <a class="btn btn-default" href="/PointOfSale/Coupon"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
        </div>
        <div class="panel-body">
            <div style="margin-bottom:5px;">
                <button class="btn btn-default" id="btnAddCoupon"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add</button>
            </div>
            <div id="divCouponList"></div>
        </div>
