        }
    }

    //*******************Product Autocomplete**************
    function onChangeProduct() {
        $("#productsAutoComplete").data("kendoAutoComplete").value("");
    }
    function onSelect(e) {
        $("#Category").data("kendoDropDownList").value("");
        $("#TagDropdown").data("kendoDropDownList").value("");

        selectedOne = this.dataItem(e.item.index());
        productId = parseInt(selectedOne.Value);
        $.ajax({
            url: '/PointOfSale/GetProductInfoById',
            type: "GET",
            data: { productId: productId },
            success: function (data) {
                $("#tblProducts tbody tr").remove();
                $("#checkAll").prop('checked', false);
                if (data == "") {
                    $("#emptyRow").show();
                }
                else
                if (data === "error")
                {
                    $("#emptyRow").show();
                    return 0;
                }
                else
                {
                    if ($("#emptyRow").length == 1)
                    {
                            $("#emptyRow").hide();
                    }
                    $(data).each(function (index, item) {
                        $("#tblProducts").append('<tr id="product_' + productId + '" class="Products" data-id="' + productId + '">' +
                            '<td>' +
                            '<input type="checkbox" data-id="' + productId + '" class="check" id="check_' + productId + '"/>' +
                            '</td>' +
                            '<td>' + item.ProductName + '</td>' +
                            '<td>' +
                            '<span>' + item.Price + '</span>' +
                            '</td>' +
                            '</tr > ');
                    });
                    checkExist(productId);
                }
            }
        });
    }

    //product autocomplete additonal info
    function additionInfo() {
        var ids = [];
        var totalIds = "";
        $(".Products").each(function () {
            ids.push($(this).data("id"));
        });
        totalIds = ids.join(",");
        return {
            ids: totalIds,
            text: $("#productsAutoComplete").val()
        }
    }

    function checkExist(proId)
    {
        if (selectedIds.indexOf(proId) > -1) {
            $("#check_" + proId).prop('checked', true);
        }
    }


</script>

