@model IEnumerable<PointOfSale.Models.ViewEvent>
@using PointOfSale.Helpers
@{
    var count = 0;
}
@if (Model.Any() == true)
{
    <table class="table table-bordered table-hover table-responsive table-condensed table-striped">
        <tr>
            <th>SL.</th>
            <th>Name</th>
            <th>Schedule</th>
            <th>Coupon</th>
            <th>Validity</th>
            <th>CreatedBy</th>
            <th>Created Date</th>
            <th>UpdatedBy</th>
            <th>Updated Date</th>
            <th></th>
        </tr>
        @foreach (var list in Model)
         {
            count++;
            <tr>
                <td>@count. </td>
                <td>
                    <a href="@Html.EncodedParam("EventDetails", "PointOfSale", new { eventId = list.Id }, null)" data-toggle="tooltip" title="View Event offer">@list.EventName</a>
                </td>
                <td>@list.ScheduleName</td>
                <td>@list.Coupon</td>
                <td>@Convert.ToDateTime(list.Validity).ToString("MMM dd,yyyy hh:mm:ss tt")</td>
                <td>@list.CreatedBy</td>
                <td>@Convert.ToDateTime(list.CreatedDate).ToString("MMM dd,yyyy")</td>
                <td>@list.UpdatedBy</td>
                <td>
                    @if (list.UpdatedDate != null)
                    {
                        @Convert.ToDateTime(list.UpdatedDate).ToString("MMM dd,yyyy")
                    }
                    else
                    {
                        <span>not yet updated</span>
                    }
                </td>
                <td>
                    <button class="btn btn-info btnEditCoupon" data-id="@list.Id" data-toggle="tooltip" title="Edit event coupon"><i class="fa fa-pencil-square-o"></i></button>
                    <button class="btn btn-primary btnEventEdit" data-id="@list.Id" data-subid="@list.SubId" data-toggle="tooltip" title="Edit event information"><i class="fa fa-pencil-square-o"></i></button>
                    @if (list.Status == true)
                     {
                        <button type="button" data-id="@list.Id" data-isactive="0" class="btn btn-danger inactivateEvent" data-toggle="tooltip" title="Inactivate Event">
                            <i class="fa fa-stop" aria-hidden="true"></i>
                        </button>
                     }
                    else
                    {
                        <button type="button" data-id="@list.Id" data-isactive="1" class="btn btn-success activateEvent" data-toggle="tooltip" title="Activate Event">
                            <i class="fa fa-play" aria-hidden="true"></i>
                        </button>
                    }
                    @if (@list.Status == false)
                     {
                        <span data-id="@list.Id" style="cursor:pointer;" data-toggle="tooltip" title="Delete Event" class="btn btn-danger btnEventDelete">
                            <i class="fa fa-trash"></i>
                        </span>
                     }
                </td>
            </tr>
         }
    </table>
 }
else
{
    <h4>There is no record to display</h4>
}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
</script>





