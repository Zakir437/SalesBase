@{
    ViewBag.Title = "OfferCreate";
    Layout = "~/Views/Shared/_LayoutForTemplate.cshtml";
}
<style>
    .btnBox {
        height: 200px;
        width: 100%;
        border: 1px solid #808080;
        margin-bottom: 15px;
    }

    h1 {
        padding: 50px 0px;
    }
</style>
<div class="content">
    <div class="panel panel-info">
        <div class="panel-heading" style="padding-bottom:46px;">
            <div class="pull-left">
                <h4 class="uppercase">Offer Create</h4>
            </div>
            <div class="pull-right">
                <a class="btn btn-default" href="/PointOfSale/Offer">
                    <i class="fa fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <div class="panel-body">
            <div class="col-md-4">
                <a class="btn btn-default btnBox" href="/PointOfSale/EventOffer" data-toggle="tooltip" title="Create Event offer">
                    <h1>Events</h1>
                </a>
            </div>
            <div class="col-md-4">
                <a class="btn btn-default btnBox" href="/PointOfSale/SaleOffer" data-toggle="tooltip" title="Create Sale offer">
                    <h1>Sale</h1>
                </a>
            </div>
            <div class="col-md-4">
                <a class="btn btn-default btnBox" href="/PointOfSale/Points" data-toggle="tooltip" title="Create Product Points">
                    <h1>Points</h1>
                </a>
            </div>
            <div class="col-md-4">
                <a class="btn btn-default btnBox" href="/PointOfSale/Coupon" data-toggle="tooltip" title="Create Coupon">
                    <h1>Coupon</h1>
                </a>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $("#liForSalesMenu").addClass('active');
        $("#liForOffer").addClass('active');

        $('[data-toggle="tooltip"]').tooltip();
    })
</script>




