    @***************DateRange End******************@

    //Print
    $(".btnPrint").click(function () {
        var data = "customerId=" + 0 + "&days=" + days + "&from=" + from + "&to=" + to;
        if (listType == 1) // order print
        {
            window.open('@Url.Action("OrdersPrint", "PointOfSale")?q=' + btoa(data), '_blank');
