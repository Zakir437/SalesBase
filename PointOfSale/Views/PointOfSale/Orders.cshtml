    //************************Order list**************************************
    $("#btnOrder").click(function () {
        listType = 1;
        isRefundList = false;
        $("#divOrderMultiSelect").show();
        $("#divCustomerMultiSelect").hide();
        $("#btnOrder").addClass("selected");
        $("#btnCreditCustomer").removeClass("selected");
