        passdata = { count: count };
        if (listType == 1)
        {
            if(count >= @totalOrder)
            {
                $("#btnSeeMore").hide();
            }
            $("#divOrderList").empty();
            $("#divOrderList").append('<div class="loading_partial"></div>');
            $("#divOrderList").load('@Url.Action("OrderList", "PointOfSale")', passdata);
