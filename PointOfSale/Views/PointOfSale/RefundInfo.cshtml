@model IEnumerable<PointOfSale.Models.ViewPosOrder>
@{ 
    var count = 0;
}
<div class="k-edit-form-container col-lg-11 col-md-10 col-sm-11 col-xs-10" style="margin:14px 0 0 28px;">
    <div id="divRefundList">
        @if (Model.Any())
         {
            <table class="table table-bordered table-hover table-responsive table-condensed table-striped">
                <tr>
                    <th>SL.</th>
                    <th>Voucher</th>
                    <th>RefundBy</th>
                    <th>Refund Date</th>
                </tr>
                @foreach (var list in Model)
                 {
                    count++;
                    <tr>
                        <td>@count. </td>
                        <td>@list.OrderNumber</td>
                        <td>@list.RefundBy</td>
                        <td>@Convert.ToDateTime(list.RefundDateTime).ToString("MMM dd,yyyy")</td>
                    </tr>
                 }
            </table>
        }
        else
        {
            <h4>There is no record to display</h4>
        }
    </div>
    <div class="k-edit-buttons k-state-default">
        <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnRefundInfoCancel"><span class="k-icon k-cancel"></span>Cancel</button>
    </div>
</div>
<script>
    $("#btnRefundInfoCancel").click(function () {
        $(this).closest(".k-window-content").data("kendoWindow").close();
    });
</script>
