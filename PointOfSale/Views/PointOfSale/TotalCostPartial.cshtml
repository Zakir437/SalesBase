<div class="editor-label"><label for="fromDatePicker">From</label></div>
<div class="editor-field">
    @(Html.Kendo().DateTimePicker()
    .Name("fromDatePicker")
    .Value(DateTime.Now)
    .Max(DateTime.Now)
    .Format("MMM dd yyyy hh:mm tt")
    .HtmlAttributes(new { @style = "width:248px;" })
    )
</div>
<div class="editor-label"><label for="toDatePicker">To</label></div>
<div class="editor-field">
    @(Html.Kendo().DateTimePicker()
    .Name("toDatePicker")
    .Max(DateTime.Now)
    .Value(DateTime.Now)
    .Format("MMM dd yyyy hh:mm tt")
    .HtmlAttributes(new { @style = "width:248px;" })
    )
</div>
