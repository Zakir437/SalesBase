<div class="editor-label"><label for="fromDatePickerForSale">From</label></div>
<div class="editor-field">
    @(Html.Kendo().DateTimePicker()
    .Name("fromDatePickerForSale")
    .Value(DateTime.Now)
    .Max(DateTime.Now)
    .Format("MMM dd yyyy hh:mm tt")
    .HtmlAttributes(new { @style = "width:248px" })
    )
</div>
<div class="editor-label"><label for="toDatePickerForSale">To</label></div>
<div class="editor-field">
    @(Html.Kendo().DateTimePicker()
    .Name("toDatePickerForSale")
    .Max(DateTime.Now)
    .Value(DateTime.Now)
    .Format("MMM dd yyyy hh:mm tt")
    .HtmlAttributes(new { @style = "width:248px;" })
    )
</div>
