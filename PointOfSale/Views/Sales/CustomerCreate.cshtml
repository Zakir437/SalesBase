                url: '@Url.Action("CustomerCreateSave", "Sales")',
                type: "POST",
                data: sendData,
                success: function (data) {
                    if (data == "success") {
                        $("#divCustomerWindow").data("kendoWindow").close();
                        $('#Customer').data('kendoDropDownList').dataSource.read();
                    }
                    else {
                        alert("Customer Save Error");
                    }
                }
            });
        }
    });
</script>
