<div id="divAddCouponWin"></div>
<script>
    var id = 0;
    $(document).ready(function () {
        $("#liForSalesMenu").addClass('active');
        $("#liForOffer").addClass('active');

        $("#divCouponList").append('<div class="loading_partial"></div>');
        $("#divCouponList").load('/Sales/DChargeCouponList');
    });

    $("#btnAddCoupon").click(function () {
        $("#divAddCouponWin").empty();
        $("#divAddCouponWin").kendoWindow({
            actions: ["Close"],
            draggable: false,
            modal: true,
            visible: false,
            width: 873,
            height: 540,
            title: 'Coupon',
            //resizable: false,
            close: onWindowClose
        });
        var addCouponWin = $("#divAddCouponWin").data("kendoWindow");
        addCouponWin.refresh('/Sales/DChargeCouponCreate');
        addCouponWin.center().open();
        document.documentElement.style.overflow = 'hidden';  // firefox, chrome
        document.body.scroll = "no";
    });


    $("#divCouponList").on('click', '.btnEdit', function () {
        id = parseInt($(this).data("id"));
        $("#divAddCouponWin").empty();
        $("#divAddCouponWin").kendoWindow({
            actions: ["Close"],
            draggable: false,
            modal: true,
            visible: false,
            width: 873,
            height: 540,
            title: 'Coupon',
            //resizable: false,
            close: onWindowClose
        });
        var addCouponWin = $("#divAddCouponWin").data("kendoWindow");
        addCouponWin.refresh('/Sales/DChargeCouponCreate?id=' + id);
        addCouponWin.center().open();
        document.documentElement.style.overflow = 'hidden';  // firefox, chrome
        document.body.scroll = "no";
    });
</script>