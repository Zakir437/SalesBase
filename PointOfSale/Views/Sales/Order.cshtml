@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_LayoutForTemplate.cshtml";
    long countNumber = ViewBag.CountNumber;
}
<style>
    .k-input {
        height: 26px !important;
    }
</style>
<link href="~/Content/numpad.css" rel="stylesheet" />
<link href="~/Content/myCss.css" rel="stylesheet" />
<section class="content">
    <div class="panel panel-info">
        <div class="panel-heading" style="padding-bottom:46px;">
            <div class="pull-left">
                <h4 class="uppercase">Sales Order</h4>
            </div>
            <div class="pull-right">
                <a class="btn btn-default" href="/Sales/InactiveSalesOrder">Inactive Sales Order</a>
            </div>
        </div>
        <div class="panel-body">
            <div class="pull-left" style="max-width: 48%!important; width:100%;">
                @(Html.Kendo().MultiSelect()
                            .Name("OrderMultiselect")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .Placeholder("Type order number...")
                            .AutoBind(false)
                            //.MinLength(3)
                            .Events(e => e.Change("onChange"))
                            .HtmlAttributes(new { style = "width: 100%;" })
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("GetOrderList", "Sales").Data("additionalInfoForOrders"); 
                                })
                                .ServerFiltering(true);
                            }))
                <span class="k-icon k-i-search" style="margin-top:-25px;float:right;margin-right:10px; position:relative">&nbsp;</span>
            </div>
            <div class="pull-right">
                <div class="pull-left" style="padding: 5px 10px;padding-right:5px!important;" id="show_Days_Title"></div>
                <button class="btn btn-primary btnPrint pull-right" style="height:32px;" data-toggle="tooltip" title="Print"><i class="fa fa-print"></i></button>
                <button class="btn btn-primary btnPrintWithDetails pull-right" style="height:32px; margin-right:5px;" data-toggle="tooltip" title="Print With Details"><i class="fa fa-print"></i></button>
                <div class="btn-group btn-group-devided pull-right" data-toggle="buttons" style="padding-right:5px;">
                    <div id="reportrange" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                        <span></span> <b class="caret"></b>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding-top:0px;">
            <div id="divOrderList"></div>
            <div class="text-center" style="margin-bottom:10px">
                <button class="btn btn-primary" id="btnSeeMore"><i class="fa fa-arrow-down"></i> See more</button>
            </div>
        </div>
    </div>
</section>
<script id="tempWinRefund" type="text/x-kendo-template">
    <div style="padding:1em;">
        <p style="font-size: 14px; padding: 10px"> #=msg# </p>
        <div style="text-align: right;">
            <button type="button" class="k-button k-button-icontext k-primary k-grid-update" id="btnRefundOk"><span class="k-icon k-update"></span>OK</button>
            <button type="button" class="k-button k-button-icontext k-grid-cancel" id="btnRefundCancel"><span class="k-icon k-cancel"></span>Cancel</button>
        </div>
    </div>
</script>
<div id="divRefundAlertWin"></div>
<div id="divRefundPayWin"></div>
<div id="divPaymentTranWin"></div>
<div id="divOrderArchiveWin"></div>
<script>
    var selectedId = "";
    var orderId = 0;
    var listType = 1, count = 10;
    var days = 0, from = null, to = null;
    var passdata = '';
    var start = moment();
    var end = moment().subtract(1, 'days');
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $("#liForSalesMenu").addClass('active');
        $("#liForSales").addClass('active');
        $('.ranges li').first().click();
    });
    //**************************Order MultiSelect***************************
    function onChange()
    {
        selectedId = "";
        selectedId = this.value();
        if (selectedId.length > 0)
        {
            $(".btnPrint").prop("disabled", false);
            $(".btnPrintWithDetails").prop("disabled", false);
            $("#btnSeeMore").hide();
            $("#divOrderList").empty();
            $("#divOrderList").append('<div class="loading_partial"></div>');
            $("#divOrderList").load('@Url.Action("OrderList","Sales")?selectedId=' + selectedId);
        }
        else
        {
            $('.ranges li').first().click();
        }
    }
    //pass additional data to load order multiselect
    function additionalInfoForOrders() {
        return {
            days: days,
            from: from,
            to: to,
            text: ($.trim($("#OrderMultiselect").data("kendoMultiSelect").input.val()) == "Type order number..." ? "" : $.trim($("#OrderMultiselect").data("kendoMultiSelect").input.val()))
        }
    }
    @***************DateRange Start******************@
    $('#reportrange').daterangepicker({
        startDate: start,
        endDate: end,
        ranges: {
            'Select Date': [moment(), moment().subtract(1, 'days')],
            'Today': [moment(), moment()],
            'Last 7 Days': [moment().subtract(6, 'days'), moment()],
            'Last 30 Days': [moment().subtract(29, 'days'), moment()],
        }
    }, cb);
    cb(start, end);
    start = moment(); end = moment();
    $(".applyBtn").click(function () {
        from = $("input[name*='daterangepicker_start']").val();
        to = $("input[name*='daterangepicker_end']").val();
        btn_CustomDate(from, to);
    });

    $('.ranges').on("click", "li", function () {
        var day = $(this).text();
        if (day == "Select Date") {
            btn_All();
        } else {
            if (day == "Today") {
                btn_today();
            } else if (day == "Last 7 Days") {
                btn_last_seven();
            } else if (day == "Last 30 Days") {
                btn_last_thirty();
            }
        }
    });
    function cb(start, end) {
        if (start == null && end == null) {
            $('#reportrange span').html("Select Date");
            return;
        }
        else if ((!start._isValid && !end._isValid)) {
            $('#reportrange span').html("Select Date");
            return;
        } else if (start._d > end._d) {
            $('#reportrange span').html("Select Date");
            return;
        }
        $('#reportrange span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'));
    }
    function btn_today() {
        days = 1;
        from = null;
        to = null;
        $(".btnPrint").prop("disabled", false);
        $(".btnPrintWithDetails").prop("disabled", false);
        $("#btnSeeMore").hide();
        $('#show_Days_Title').html("Today");
        passdata = { days: 1 };
        $("#divOrderList").empty();
        $("#divOrderList").append('<div class="loading_partial"></div>');
        $("#divOrderList").load('@Url.Action("OrderList", "Sales")', passdata);
    }
    function btn_last_seven() {
        days = 7;
        from = null;
        to = null;
        $(".btnPrint").prop("disabled", false);
        $(".btnPrintWithDetails").prop("disabled", false);
        $("#btnSeeMore").hide();
        $('#show_Days_Title').html("Last 7 Days");
        passdata = { days: 7 };
        $("#divOrderList").empty();
        $("#divOrderList").append('<div class="loading_partial"></div>');
        $("#divOrderList").load('@Url.Action("OrderList", "Sales")', passdata);
    }
    function btn_last_thirty() {
        days = 30;
        from = null;
        to = null;
        $(".btnPrint").prop("disabled", false);
        $(".btnPrintWithDetails").prop("disabled", false);
        $("#btnSeeMore").hide();
        $('#show_Days_Title').html("Last 30 Days");
        passdata = { days: 30 };
        $("#divOrderList").empty();
        $("#divOrderList").append('<div class="loading_partial"></div>');
        $("#divOrderList").load('@Url.Action("OrderList", "Sales")', passdata);
        
    }
    function btn_All() {
        days = 0;
        from = null;
        to = null;
        count = 10;
        $(".btnPrint").prop("disabled", true);
        $(".btnPrintWithDetails").prop("disabled", true);
        $("#btnSeeMore").hide();
        $('#show_Days_Title').html("");
        $('#reportrange span').html("Select Date");
        passdata = { count: count };
        if(@countNumber > count)
        {
            $("#btnSeeMore").show();
        }
        $("#divOrderList").empty();
        $("#divOrderList").append('<div class="loading_partial"></div>');
        $("#divOrderList").load('@Url.Action("OrderList", "Sales")', passdata);
      
    }
    function btn_CustomDate(from, to) {
        days = 0;
        $(".btnPrint").prop("disabled", false);
        $(".btnPrintWithDetails").prop("disabled", false);
        $("#btnSeeMore").hide();
        passdata = { from: new Date(from).toISOString(), to: new Date(to).toISOString() };
        $('#show_Days_Title').html("Custom Range");
        $("#divOrderList").empty();
        $("#divOrderList").append('<div class="loading_partial"></div>');
        $("#divOrderList").load('@Url.Action("OrderList", "Sales")', passdata);
    }
    @***************DateRange End******************@

    //order Print
    $(".btnPrint").click(function () {
        var data = "days=" + days + "?from=" + new Date(from).toISOString() + "?to=" + new Date(to).toISOString() + "?selectedId=" + $("#OrderMultiselect").data("kendoMultiSelect").value();
        window.open('@Url.Action("OrdersPrint", "Sales")?q=' + getDataEncrypted(data), '_blank');
    });

    //order Print with details
    $(".btnPrintWithDetails").click(function () {
        var data = "days=" + days + "?from=" + new Date(from).toISOString() + "?to=" + new Date(to).toISOString() + "?selectedId=" + $("#OrderMultiselect").data("kendoMultiSelect").value() + "?isPrintWithDetails=true";
        window.open('@Url.Action("OrdersPrint", "Sales")?q=' + getDataEncrypted(data), '_blank');
    });

    //See more data
    $("#btnSeeMore").click(function () {
        count = count + 10;
        passdata = { count: count };
        if(count >= @countNumber)
        {
            $("#btnSeeMore").hide();
        }
        $("#divOrderList").empty();
        $("#divOrderList").append('<div class="loading_partial"></div>');
        $("#divOrderList").load('@Url.Action("OrderList", "Sales")', passdata);
    });

    //***************show payment transaction****************************

    $("#divOrderList").on('click', '.btnPaymentTransaction', function () {
        orderId = parseInt($(this).data("id"));
        $("#divPaymentTranWin").empty();
        $("#divPaymentTranWin").kendoWindow({
                actions: ["Close"],
                draggable: false,
                modal: true,
                visible: false,
                width: 1200,
                height: 500,
               resizable: false,
               title: 'Payment Transaction',
               close: onWindowClose
        });
        var paymentTranWin = $("#divPaymentTranWin").data("kendoWindow");
        paymentTranWin.refresh('@Url.Action("PaymentHistoryPartial", "Sales")?orderId=' + orderId);
        paymentTranWin.center().open();
        document.documentElement.style.overflow = 'hidden';  // firefox, chrome
        document.body.scroll = "no";
    });

    //***************return archive****************************
    $("#divOrderList").on('click', '.btnOrderArchive', function () {
        orderId = parseInt($(this).data("id"));
        $("#divOrderArchiveWin").empty();
        $("#divOrderArchiveWin").kendoWindow({
                actions: ["Close"],
                draggable: false,
                modal: true,
                visible: false,
                width: 1200,
                height: 500,
               resizable: false,
               title: 'Order Archive',
               close: onWindowClose
        });
        var orderArchive = $("#divOrderArchiveWin").data("kendoWindow");
        orderArchive.refresh('@Url.Action("RefundInfo", "Sales")?orderId=' + orderId);
        orderArchive.center().open();
        document.documentElement.style.overflow = 'hidden';  // firefox, chrome
        document.body.scroll = "no";
    });
</script>




