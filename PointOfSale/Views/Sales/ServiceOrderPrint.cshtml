@model PointOfSale.Models.ViewAfterSaleService
@{
    ViewBag.Title = "ServiceOrderPrint";
    Layout = "~/Views/Shared/_LayoutPrintPage.cshtml";
    long masterId = Model.Id;
    var count = 0;
    PointOfSale.Models.PointOfSale_DBEntities db = new PointOfSale.Models.PointOfSale_DBEntities();
    var customer = db.ServicesCustomers.FirstOrDefault(a => a.ASSId == masterId);
    var supplementaryItems = db.ViewServicesSupplementaries.Where(a => a.AssId == masterId && a.Status == true).ToList();
    var services = db.ViewServicesServices.Where(a => a.AssId == masterId).ToList();
    var product = db.ViewServicesProducts.FirstOrDefault(a => a.AssId == masterId);
}
<style>
    dl {
        margin-bottom: 20px;
       }
dt,
dd {
  line-height: 1.428571429;
}

dt {
  font-weight: bold;
}

dd {
  margin-left: 0;
}
  .dl-horizontal dt {
    float: left;
    width: 160px;
    overflow: hidden;
    clear: left;
    text-align: right;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .dl-horizontal dd {
    margin-left: 180px;
  }
  .dl-horizontal dd:before,
  .dl-horizontal dd:after {
    display: table;
    content: " ";
  }
  .dl-horizontal dd:after {
    clear: both;
  }
  .dl-horizontal dd:before,
  .dl-horizontal dd:after {
    display: table;
    content: " ";
  }
  .dl-horizontal dd:after {
    clear: both;
  }

 /*.table tbody tr td{
      border:none;
  }*/
 hr{
     margin-bottom:0px;
     margin-top:0px;
 }

</style>
<section style="margin-top:10px;">
    <div class="row">
        <div class="col-xs-4">
            <button class="btn btn-default pull-left" id="btnPrint" style="margin-top:10px;"><i class="fa fa-print"></i>Print</button>
        </div>
        <div class="col-xs-4">
            <div class="text-center">
                <h3 style="margin-top:0px;">SpicyBinary</h3>
                <p>Cost-POS</p>
            </div>
        </div>
        <div class="col-xs-4 text-right">
            <img src="~/Content/Icon/spicybinaryLogo.jpeg" class="img-responsive img-thumbnail" style="width:60px;height:60px;"/>
        </div>
    </div>
</section>
    <p>
        Generate By : @HttpContext.Current.Request.Cookies["CookieUserInfo"].Values["UserName"]<br>
        Generate Date : @DateTime.Now.ToString("MMM dd yyyy hh:mm:ss tt") <br>
    </p>
<hr />
<section>
    <h4>Order Information</h4>
    <div class="row">
        <div class="col-xs-12">
            <dl class="dl-horizontal">
                <dt>Order No</dt>
                <dd>@Model.WorkOrderNo</dd>
                <dt>Created By</dt>
                <dd>@Model.CreatedBy</dd>
                <dt>Created Date</dt>
                <dd>@Convert.ToDateTime(Model.CreatedDate).ToString("MMM dd,yyyy")</dd>
            </dl>
        </div>
    </div>
</section>
<hr />
<section>
    <h4>Customer Information</h4>
    <div class="row">
            @if (customer != null)
             {
                <div class="col-xs-6">
                    <dl class="dl-horizontal">
                        <dt>Name</dt>
                        <dd>@customer.FirstName @customer.LastName</dd>
                        <dt>Mobile</dt>
                        <dd>@customer.Mobile</dd>
                        <dt>E-mail</dt>
                        <dd>@customer.Email</dd>
                    </dl>
                </div>
                <div class="col-xs-6">
                    <dl class="dl-horizontal">
                        <dt>Alternate Mobile</dt>
                        <dd>@customer.AlternateMobile</dd>
                        <dt>Address Line 1</dt>
                        <dd>@customer.Addressline1</dd>
                        <dt>Address Line 2</dt>
                        <dd>@customer.Addressline2</dd>
                    </dl>
                </div>
               
             }
            else
            {
                <div class="text-center">
                    <h5>Customer not found</h5>
                </div>
            }
           
        </div>
</section>
<hr />
<section>
    <h4>Product Information</h4>
    <div class="row">
        <div class="col-xs-6">
            <dl class="dl-horizontal">
                <dt>Name</dt>
                <dd>@Model.ProductName</dd>
                <dt>S/N</dt>
                <dd>@Model.SerialNumber</dd>
                <dt>Invoice No</dt>
                <dd>@Model.InvoiceNo</dd>
            </dl>
        </div>
        <div class="col-xs-6">
            @if (product.ConditionId > 0)
             {
                <dl class="dl-horizontal">
                    <dt>Condition</dt>
                    <dd>@product.ConditionName</dd>
                    <dt>Observation</dt>
                    <dd>@product.ConditionObservation</dd>
                </dl>
             }
        </div>
    </div>
</section>
<hr />
<section>
    <h4>Supplementary Items</h4>
    <div class="row">
        <div class="col-md-12">
            @if (supplementaryItems.Any())
             {
                count = 0;
                <dl class="dl-horizontal">
                    @foreach (var item in supplementaryItems)
                     {
                        count++;
                        <dt>@count.</dt>
                        <dd>@item.SupplementaryName</dd>
                     }
                </dl>
             }
            else
            {
                <div class="text-center">
                    <h5>There is no selected items</h5>
                </div>
            }
        </div>
    </div>
</section>
<hr />
<section>
    <h4>Service</h4>
    <div class="row">
            @if (services.Any())
             {
                count = 0;
                <div class="col-xs-1"></div>
                <div class="col-xs-4">
                    <table class="table">
                        @foreach (var item in services)
                         {
                            count++;
                            <tr>
                                <td>@count.</td>
                                <td>@item.ServiceName</td>
                                <td>@item.ServiceCharge</td>
                            </tr>
                         }
                        <tr>
                            <td></td>
                            <td style="text-align:right">Total =</td>
                            <td>@services.Where(a => a.ServiceCharge > 0).Sum(a => a.ServiceCharge)</td>
                        </tr>
                    </table>
                </div>
             }
            else
            {
                <div class="text-center">
                    <h5>There is no selected items</h5>
                </div>
            }
    </div>
</section>
<hr />
<section>
    <h4>Delivery Information</h4>
    <div class="row">
        <div class="col-xs-12">
            <dl class="dl-horizontal">
                <dt>Delivery Date</dt>
                <dd>@Convert.ToDateTime(Model.DeliveryDate).ToString("MMM dd,yyy hh:mm:ss tt")</dd>
            </dl>
        </div>
    </div>
</section>
<hr />
<section>
    <h4>Terms & Condition</h4>
    <div class="row">
        <div class="col-xs-9">
            <h5>Conditionos</h5>
        </div>
        <div class="col-xs-3">
            <div style="height:60px;">Customer Sign<hr /> </div>
            <div style="height:100px;">Seal<hr /></div>
        </div>
    </div>
</section>
<script>
    $("#btnPrint").click(function () {
        $("#btnPrint").hide();
        window.print();
        $("#btnPrint").show();
    });
</script>