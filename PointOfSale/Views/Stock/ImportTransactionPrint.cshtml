@model PointOfSale.Models.ViewStockImport
@using System.Globalization;
@{
    ViewBag.Title = "ImportTransactionPrint";
    Layout = "~/Views/Shared/_LayoutPrintPage.cshtml";
}
<section class="content-header" style="text-align:center;">
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <h3>Import Transaction</h3>
            <p>Cost-POS</p>
        </div>
        <div class="col-xs-3">
            <button class="btn btn-default pull-right" id="btnPrint" style="margin-top:10px;"><i class="fa fa-print"></i>Print</button>
        </div>
    </div>
    <hr />
</section>
<div class="row">
    <div class="col-xs-offset-6 col-xs-6 text-left">
        <p>
            Generate By : @HttpContext.Current.Request.Cookies["CookieUserInfo"].Values["UserName"]<br>
            Generate Date : @DateTime.Now.ToString("MMM dd yyyy hh:mm:ss tt") <br>
        </p>
    </div>
    <div class="col-xs-offset-6 col-xs-6 text-right">
        @if (Model != null)
         {
            <p>
                Import by : @Model.ImportBy<br />
                Refference No : @Model.RefferenceNo<br />
                Supplier : @Model.SupplierName<br />
                Total Cost : @Model.TotalCost.ToString("C", new CultureInfo("bn-BD"))<br />
                Due Amount : @Model.DueAmount.ToString("C", new CultureInfo("bn-BD"))<br />
                Date : @Convert.ToDateTime(Model.Date).ToString("MMM dd yyyy hh:mm:ss tt")
            </p>
         }
    </div>
</div>
<div class="row" style="margin-top:10px;">
    <div class="col-md-12">
        <div id="divImportTransactionList"></div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#divImportTransactionList").append('<div class="loading_partial"></div>');
        $("#divImportTransactionList").load('@Url.Action("ImportTransactionList", "Stock")?importId=' + @Model.StockImportId + '&isPrint=true');
    });

    $("#btnPrint").click(function () {
        $("#btnPrint").hide();
        window.print();
        $("#btnPrint").show();
    });
</script>

