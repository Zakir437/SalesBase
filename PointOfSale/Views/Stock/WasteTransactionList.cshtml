@model IEnumerable<PointOfSale.Models.ViewWasteTransaction>
@{
    var count = 0;
}
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>SL.</th>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
        @foreach (var list in Model)
        {
            count++;
            <tr>
                <td>@count.</td>
                <td>@list.ProductName</td>
                <td>@list.Quantity</td>
            </tr>
        }
    </table>
}
else
{
    <h3>There is no record to display</h3>
}

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
</script>
